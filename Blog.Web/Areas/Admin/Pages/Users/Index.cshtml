@page
@model Blog.Web.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "کاربران";
}

<h1>@ViewData["Title"]</h1>
<form method="get">
    <div class="my-4">
        <div class="form-row align-items-center">
            <div class="col-5">
                <input class="form-control" asp-for="Parameters.Query"/>
            </div>
            <div class="col-3">
                <button class="btn btn-outline-success" type="submit">جستجو</button>
            </div>
        </div>
        <div class="form-row align-items-center mt-2">
            <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Parameters.QueryByUsername" checked/>
                    <label class="form-check-label" asp-for="Parameters.QueryByUsername">
                    </label>
                </div>
            </div>
            <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-inline" asp-for="Parameters.QueryByEmail"/>
                    <label class="form-check-label" asp-for="Parameters.QueryByEmail">
                    </label>
                </div>
            </div>
        </div>
    </div>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>شناسه کاربری</th>
            <th>نام کاربری</th>
            <th>آدرس ایمیل</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @Model.PreviousDisabled">
            <a class="page-link"
               asp-route-pageNumber="@(Model.Users.CurrentPage - 1)">Previous</a>
        </li>
        <li class="page-item @Model.NextDisabled">
            <a class="page-link"
               asp-route-pageNumber="@(Model.Users.CurrentPage + 1)">Next</a>
        </li>
    </ul>
</nav>