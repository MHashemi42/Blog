<!DOCTYPE html>

<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-rtl.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <title>@ViewBag.Title</title>
</head>
<body class="bg-light">
    <div>
        <header>
            <nav class="navbar navbar-light bg-white navbar-expand fixed-top px-5">
                <a class="navbar-brand mb-0" href="/">Blog</a>
                <ul class="navbar-nav mr-auto">
                    <partial name="_UserNavbar" />
                </ul>
            </nav>
        </header>
        <main class="container-fluid px-sm-5">
            <div class="row">
                <div class="col-12 col-lg-9">
                    @RenderBody()
                </div>
                <div class="d-none d-lg-block col-lg-3">
                    
                </div>
            </div>
        </main>
    </div>
    <footer class="footer direction-ltr bg-light">
        <nav class="navbar navbar-light container">&copy;Blog, 2021</nav>
    </footer>
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
