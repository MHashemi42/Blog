@model LoginViewModel
@inject IOptions<ReCaptchaSettings> ReCaptcha

<h1>ورود به حساب کاربری</h1>
<form method="post" id="login-form">
    <div asp-validation-summary="ModelOnly" class="text-danger">
        <span>خطا:</span>
    </div>
    <input asp-for="ReturnUrl" type="hidden" />
    <input asp-for="ReCaptchaToken" type="hidden"/>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control direction-ltr" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
        <span asp-validation-for="RememberMe"></span>
    </div>
    <button class="g-recaptcha btn btn-primary"
            data-sitekey="@ReCaptcha.Value.SiteKey"
            data-callback='onSubmit'
            data-action='submit'>
        ورود
    </button>
</form>
<ul class="list-group mt-2">
    <li class="list-group-item">
        <span>
            آدرس ایمیل خود را تایید نکرده اید؟ <a asp-controller="Account"
                                                  asp-action="ResendEmailConfirmation">کلیک کنید</a>
        </span>
    </li>
    <li class="list-group-item">
        <span>
            کلمه عبور خود را فراموش کرده اید؟ <a asp-controller="Account"
                                                 asp-action="ForgetPassword">کلیک کنید</a>
        </span>
    </li>
</ul>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script>
        function onSubmit(token) {
            $("#ReCaptchaToken").val(token);
            var form = $("#login-form");
            if (form.valid()) {
                form.submit();
            }
        }
    </script>
}