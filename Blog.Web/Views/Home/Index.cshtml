@model PagedList<Blog.Data.Models.PostSummary>
@{
    ViewBag.Title = "Blog";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">آخرین مطالب</li>
    </ol>
</nav>

@foreach (var postSummary in Model)
{
    <div class="my-3">
        <partial name="_PostSummary" model="postSummary" />
    </div>
}
<vc:pagination has-previous="@Model.HasPrevious"
               has-next="@Model.HasNext"
               current-page="@Model.CurrentPage"></vc:pagination>